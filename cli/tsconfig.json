{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest"],

    // TODO: fix violations and remove
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/__test__",
    "src/html/__test__",
    "src/react/__test__",
    "src/connect/__test__",
    "src/connect/wizard/__test__",
    "src/storybook/__test__",
    "src/components",
    "scripts"
  ]
}
